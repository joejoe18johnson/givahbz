# NextAuth (use the exact URL you open in the browser, including port if not 3000)
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-generate-with-openssl-rand-base64-32

# Google OAuth — create at https://console.cloud.google.com/apis/credentials (OAuth 2.0 Client ID, Web application).
# Use the real Client ID and Client secret; no quotes, no spaces. Restart dev server after changing.
GOOGLE_CLIENT_ID=123456789-xxxx.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=GOCSPX-xxxxxxxxxxxxxxxxxxxxxxxx

# Admin dashboard: comma-separated list of emails that get admin role
# Server-side (API routes): ADMIN_EMAILS
ADMIN_EMAILS=admin@givahbz.com,admin@example.com
# Client-side (required for admin dashboard & Google sign-in admin): NEXT_PUBLIC_ADMIN_EMAILS
# Without this, "Sign in as Admin" won't work—the browser can't read ADMIN_EMAILS. Set both; redeploy after changing.
NEXT_PUBLIC_ADMIN_EMAILS=admin@givahbz.com,admin@example.com

# Supabase (primary backend: auth, database, storage)
# Get from Supabase Dashboard: Project Settings > API
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# Firebase Configuration (optional; used only if Supabase is not configured)
# Get these from Firebase Console: Project Settings > General > Your apps
NEXT_PUBLIC_FIREBASE_API_KEY=your-api-key
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your-project-id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your-project-id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your-project-id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=123456789012
NEXT_PUBLIC_FIREBASE_APP_ID=1:123456789012:web:abcdef123456
